<!--Undevoured Side-->
<div class="container">
    <div class="row">
        <div class="col-sm" id="left-side">
            <ul>
                {{#each burgers}} {{#unless this.devoured}}
                <li id="left-burger">
                    {{this.id}}. {{this.burger_name}}

                    <form action="/{{this.id}}?_method=PUT" method="POST">
                        <input type="hidden" name="devoured" value="false">
                        <button class="btn btn-danger" type="submit">Devour It!</button>
                    </form>
                </li>
                {{/unless}} {{/each}}
            </ul>
        </div>

        <div class="col-sm"></div>

        <!--Devoured Side-->
        <div class="col-sm" id="right-side">
            <ul>
                {{#each burgers}} {{#if this.devoured}}
                <li id="right-burger">
                    {{this.id}} {{this.burger_name}}
                </li>
                {{/if}} {{/each}}
            </ul>
        </div>
    </div>
</div>

<!--Add a burger section-->
<div class="container">
    <div class="row">
        <div id="add-burger">
            <form class="create-update-form" action="/index" method="POST">
                <div class="form-group">
                    <input type="text" id="input" name="burger_name">
                </div>
                <button class="btn btn-danger" id="submit" type="submit">Submit</button>
            </form>
            <h5>Enter a burger you want to eat. Click the submit button.</h5>
        </div>
    </div>
</div>